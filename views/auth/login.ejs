<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Logowanie</h2>
                        <form action="/login" method="POST">
                            <div class="mb-4">
                                <label for="login" class="form-label custom-label">Login</label>
                                <input type="text" class="form-control form-control-lg" name="login" id="login" required>
                            </div>
                            <div class="mb-4">
                                <label for="password" class="form-label custom-label">Hasło</label>
                                <input type="password" class="form-control form-control-lg" name="password" id="password" required>
                            </div>
                            <div class="d-grid mt-4">
                                <button class="btn btn-custom-green btn-lg" type="submit">Zaloguj się</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

<%- include('../includes/end.ejs') %>